
<div class="row">
    <div id="EventListWrapper" class="col-lg-4">
        @{Html.RenderAction("CurrentEvent", "DashBoard");}
        <br />
        <input type="hidden" id="homeEventId" />
        <div id="searchResults">
        </div>
    </div>
    <div class="col-lg-8">

        <div id="EventDetailsWrapper">
            <div id="exTab3" class="container">
                <ul class="nav nav-pills">
                    <li class="active">
                        <a href="#pitStopsTab" data-toggle="tab">PitStops</a>
                    </li>
                    <li>
                        <a href="#leaderBoardTab" data-toggle="tab" id="leaderBoard">LeaderBoard</a>
                    </li>
                </ul>

                <div class="tab-content clearfix">
                    <div class="tab-pane active" id="pitStopsTab">
                        <div class="NorecordFound">
                            <p> Select an event to view Pit stops</p>
                        </div>
                    </div>

                    <div class="tab-pane" id="leaderBoardTab">
                        <div class="NorecordFound">
                            <p> Select an event to view the leaderBoard</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
$("#leaderBoard").click(function (e) {
    var EventID = $("#homeEventId").val();
        if (EventID != "" != null) {
            ajaxGet("loaderDiv", '@Url.Action("CurrentEventBoard", "DashBoard")', { "EventID": EventID }, function (data) {
                $("#leaderBoardTab").html(data);
            }, function (status) { });
            }
            });
</script>