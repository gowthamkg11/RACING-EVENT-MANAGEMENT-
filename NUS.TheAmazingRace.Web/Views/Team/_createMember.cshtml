@model NUS.TheAmagingRace.BusinessModels.TARUserViewModel

@{
    IEnumerable<SelectListItem> MemberList = ViewBag.MemberList;
}

<form id="addMember">
    @Html.AntiForgeryToken()

   

    <div class="row">
        <div class="col-lg-5" align="center">
            <div class="form-horizontal">

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = " control-label col-lg-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.Email, MemberList, "--Select Member--", new { htmlAttributes = new { @class = "form-control-" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group" align="center">
            <div class="col-md-9">
                <input type="button" id="createMember" value="Save" onclick="AddMember()" class="btn btn-success" />
            </div>
        </div>
    </div>
    </form>
