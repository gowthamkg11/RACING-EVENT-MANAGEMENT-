<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title - The Amazing Race</title>
    @Styles.Render("~/Content/css")
    <!-- GOOGLE FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700" rel="stylesheet">


    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/modernizr")*@

</head>
<body>
    <div class="wrapper">
        <!-- Sidebar Holder -->
        <!-- Sidebar Holder -->
        <nav id="sidebar" class="active">
            <div class="sidebar-header">
                <h3>The Amazing Race</h3>
                <strong>T A R</strong>
            </div>

            <ul class="list-unstyled components">
                <li class="active">
                    <a href=" @Url.Action("Index","DashBoard")">
                        <i class="glyphicon glyphicon-home"></i>
                        Home
                    </a>

                </li>
                <li id="eventsidebarli">
                    <a href=" @Url.Action("Index","Event")">
                        <i class="glyphicon glyphicon-briefcase"></i>
                        Event Management
                    </a>

                </li>
                <li id="membersidebarli">
                    <a href=" @Url.Action("Index","Member")">
                        <i class="glyphicon glyphicon-link"></i>
                        Member Management
                    </a>
                </li>
         

            </ul>

        </nav>
        <!-- MAIN -->
        <!-- Page Content Holder -->
        <div id="content" class="container-fluid">

            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <div  class="nav-stacked navbar-brand">
                            <div class="col col-lg-2">
                                <button type="button" id="sidebarCollapse" class=" nav-divider navbar-btn">
                                    <i class="glyphicon glyphicon-align-left"></i>
                                </button>
                            </div>
                            <div class="col col-lg-10"> @Html.ActionLink("The Amazing Race", "Index", "Home", null, new { @class = "navbar-brand" })</div>
                           
                        </div>
                    </div>
                    <div class="navbar-collapse collapse">

                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </nav>
            <div class="container body-content">
                @RenderBody()
            </div>
        </div>

    </div>
    <!-- jQuery CDN -->
    <script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
    <!-- Bootstrap Js CDN -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            if (window.location.href.indexOf('@Url.Action("Index", "Event")') > 0) {
                $("#sidebar ul > li").removeClass('active');
                  $("#eventsidebarli").addClass('active');
            }
             if (window.location.href.indexOf('@Url.Action("Index", "Member")') > 0) {
                $("#sidebar ul > li").removeClass('active');
                 $("#membersidebarli").addClass('active');
                }
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
            $("#sidebar ul > li").on('click', function (e) {
                //debugger;

              
                $("#sidebar ul > li").removeClass('active');
                $(e.currentTarget).addClass('active');
            })
         
        });
    </script>

</body>
</html>
