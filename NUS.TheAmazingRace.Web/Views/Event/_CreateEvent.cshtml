<script>
    $(document).ready(function () {
        $("#btncreate").click(function () {
            $("#loaderDiv").show();
            var formData = $("#addForm").serialize();
            $.ajax({
                type: "POST",
                url: "/Event/Index",
                data: formData,
                success: function () {
                    $("#loaderDiv").hide();
                    $("#ModalAdd").modal("hide");
                    window.location.href = "/Event/Index";
                }
            })

        })
    })
